<p id="notice"><%= notice %></p>

<h1><%= t("activerecord.models.board") %></h1>
<p>質問等、情報交換の場</p>

<% @boards.each do |board| %>
  <div class="contents_wrapper index_table">
    <table>
      <tr>
        <th><%= t("activerecord.attributes.user.name") %></th>
        <th><%= t("activerecord.attributes.board.title") %></th>
        <th><%= t("activerecord.attributes.board.content") %></th>
        <th colspan="3"></th>
      </tr>
      <tr>
        <td><%= board.user.name %></td>
        <td><%= board.title %></td>
        <td><%= board.content %></td>
        <td><%= link_to "詳細", board, class: "btn btn-outline-info" %></td>
        <% if board.user_id == current_user.id %>
          <td><%= link_to 'Edit', edit_board_path(board), class: "btn btn-outline-warning" %></td>
          <td><%= link_to 'Destroy', board, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-danger" %></td>
        <% end %>
      </tr>
    </table>
  </div>
<% end %>
<br>
<div><%= paginate @boards %></div>

<br>

