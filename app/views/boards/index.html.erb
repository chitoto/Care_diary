<p id="notice"><%= notice %></p>

<h1><%= t("activerecord.models.board") %></h1>
<p>質問等、情報交換の場</p>

<table>
  <thead>
    <tr>
      <th><%= t("activerecord.attributes.user.name") %></th>
      <th><%= t("activerecord.attributes.board.title") %></th>
      <th><%= t("activerecord.attributes.board.content") %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @boards.each do |board| %>
      <tr>
        <td><%= board.user.name %></td>
        <td><%= board.title %></td>
        <td><%= board.content %></td>
        <td><%= link_to 'Show', board %></td>
        <% if board.user_id == current_user.id %>
          <td><%= link_to 'Edit', edit_board_path(board) %></td>
          <td><%= link_to 'Destroy', board, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Board', new_board_path %>
