<%= form_with(model: @pet, local: true) do |f| %>
<% if @pet.errors.any? %>
  <div id="error_explanation">
    <h2><%= @pet.errors.count %>件のエラーがあります。</h2>
    <ul>
    <% @pet.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>
<div class="form_wrapper">
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div class="form-group">
    <%= f.label :birthday %>
    <%= f.date_field :birthday %>
  </div>
  <div class="form-check">
    <%= f.label :gender, :男の子 %>
    <%= f.radio_button :gender, "男の子" %>
    &nbsp
    <%= f.label :gender, :女の子 %>
    <%= f.radio_button :gender, "女の子" %>
    &nbsp
    <%= f.label :gender, :わからない %>
    <%= f.radio_button :gender, "わからない" %>
  </div>
  <div class="form-group">
    <%= f.label :species %>
    <%= f.text_field :species %>
  </div>
  <div class="form-group">
    <%= f.label :icon %>
    <%= image_tag(@pet.icon.url) if @pet.icon && @pet.icon.url %>
    <%= f.file_field :icon %>
    <%= f.hidden_field :icon_cache %>
  </div>
  <div class="form-group">
    <%= f.label :memo %>
    <%= f.text_field :memo %>
  </div>
  <div class="form-group">
    <%= f.label :group_id %>
    <%= f.collection_select :group_id, current_user.groups, :id, :name %>
  </div>
  <div class="form-group">
  <%= f.submit '登録', class: "btn btn-primary" %>
  </div>
<% end %>
</div>
