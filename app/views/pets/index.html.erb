<h1>Pets#index</h1>

<%= link_to "ペットを登録する", new_pet_path %>
<table>
  <tr>
    <th>名前</th>
    <th>誕生日</th>
    <th>性別</th>
    <th>種別</th>
    <th>画像</th>
    <th>メモ</th>
    <th></th>
  </tr>
<% @pets.each do |pet| %>
  <tr>
    <td><%= pet.name %></td>
    <td><%= pet.birthday %></td>
    <td><%= pet.gender %></td>
    <td><%= pet.species %></td>
    <td><%=image_tag pet.icon.url %></td>
    <td><%= pet.memo %></td>
    <td>
      <%= link_to "詳細", pet_path(pet.id) %>
      <%= link_to "編集", edit_pet_path(pet.id) %>
      <%= link_to '削除', pet_path(pet.id), method: :delete %>
    </td>
  </tr>
<% end %>
</table>
