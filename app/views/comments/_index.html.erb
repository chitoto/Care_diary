<ul>
  <% comments.each do |comment| %>
    <% if comment.id.present? %>
      <li class="comment">
        <div class="comment-content" id ="this_comment_<%= comment.id %>"></div>
        <p><%= comment.content %></p>
        <p>
          <%= link_to edit_pet_comment_path(pet, comment), remote: true do %>
            編集<i class="fas fa-edit"></i>
          <% end %>
          |
          <%= link_to pet_comment_path(comment.pet_id, comment.id), method: :delete, remote: true, data: { confirm: "本当に削除しますか?"} do %>
          削除<i class="fas fa-trash-alt"></i>
          <% end %>
        </p>
      </li>
    <% end %>
  <% end %>
</ul>
